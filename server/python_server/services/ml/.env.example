# ML Service Configuration
ML_DEBUG=false
ML_HOST=0.0.0.0
ML_PORT=8001

# Verification thresholds
ML_THRESHOLD_VERIFIED=85.0
ML_THRESHOLD_MANUAL_REVIEW=60.0
ML_MAX_RETRY_ATTEMPTS=10

# Traditional CV feature weights (must sum to 1.0)
# SSIM is a separate hybrid channel, not included here
ML_WEIGHT_COLOR=0.25
ML_WEIGHT_SPATIAL=0.15
ML_WEIGHT_SHAPE=0.12
ML_WEIGHT_TEXTURE=0.15
ML_WEIGHT_HOG=0.20
ML_WEIGHT_ORB=0.13

# Hybrid method weights (should sum to 1.0)
ML_WEIGHT_TRADITIONAL=0.30
ML_WEIGHT_DEEP_LEARNING=0.25
ML_WEIGHT_SIFT=0.20
ML_WEIGHT_SSIM_HYBRID=0.15
ML_WEIGHT_PHASH_HYBRID=0.10

# Feature extraction
ML_ORB_FEATURES_COUNT=200
ML_SIFT_RATIO_THRESHOLD=0.7

# Toggle expensive features
ML_ENABLE_DEEP_LEARNING=true
ML_ENABLE_OCR=true

# Image quality gate
ML_QUALITY_MIN_BLUR_SCORE=50.0
ML_QUALITY_MIN_BRIGHTNESS=40.0
ML_QUALITY_MAX_BRIGHTNESS=240.0
ML_QUALITY_MIN_COVERAGE=0.05

# Perceptual hash
ML_PHASH_OBVIOUS_MISMATCH_THRESHOLD=40.0

# Score aggregation: "max", "median", or "trimmed_mean"
ML_SCORE_AGGREGATION=trimmed_mean
ML_MIN_GOOD_PAIRS=2
