# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/engirent_db"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRE=30d

# ML Service Configuration
ML_SERVICE_URL=http://localhost:8001
ML_SERVICE_API_KEY=your-ml-service-api-key

# GCash Payment Configuration
GCASH_API_URL=https://api.gcash.com
GCASH_MERCHANT_ID=your-merchant-id
GCASH_SECRET_KEY=your-gcash-secret-key
GCASH_PUBLIC_KEY=your-gcash-public-key

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=engirent-images

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Frontend URLs (CORS)
CLIENT_WEB_URL=http://localhost:3000
CLIENT_MOBILE_URL=http://localhost:3000

# Kiosk Configuration
KIOSK_RASPBERRY_PI_URL=http://raspberrypi.local:5001
KIOSK_WEBHOOK_SECRET=your-kiosk-webhook-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# Logging
LOG_LEVEL=info
